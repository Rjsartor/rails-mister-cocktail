<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>

<ol>
<% @cocktails.each do |cock|  %>
  <li><%= link_to cock.name, cocktail_path(cock)%></li>
    <ul>
      <li> <%=  cock.ingredients %></li>
      <li> <%= cock.doses %></li>
    </ul>
<% end %>
</ol>

<%= link_to new_cocktail_path do %>
  <i class="fa fa-plus"></i> Add a new cocktail
<% end %>
